# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here

# Optional: Model Configuration
WHISPER_MODEL=whisper-1
EMBEDDING_MODEL=text-embedding-ada-002
CHAT_MODEL=gpt-4-turbo-preview

# ============================================================================
# SECURITY CONFIGURATION (Optional)
# ============================================================================

# Authentication Settings
# Set to "true" to require an access code for using the application
REQUIRE_AUTH=false

# Access code for authentication (set this if REQUIRE_AUTH=true)
# Example: ACCESS_CODE=my_super_secret_code_12345
ACCESS_CODE=

# Rate Limiting Configuration
# Maximum number of transcriptions per hour per user/IP
MAX_TRANSCRIPTIONS_PER_HOUR=5

# Maximum number of searches per minute per user/IP
MAX_SEARCHES_PER_MINUTE=20

# Maximum number of chat messages per minute per user/IP
MAX_CHATS_PER_MINUTE=10

# ============================================================================
# PRODUCTION SECURITY RECOMMENDATIONS
# ============================================================================
#
# For production deployments:
# 1. Set REQUIRE_AUTH=true
# 2. Set a strong ACCESS_CODE (min 20 characters, alphanumeric + symbols)
# 3. Adjust rate limits based on your API budget and user needs
# 4. Consider using environment variables in your deployment platform
#    (Railway, Heroku, etc.) instead of .env files
# 5. Never commit .env files with real credentials to version control
#
# Example production settings:
# REQUIRE_AUTH=true
# ACCESS_CODE=Xk9$mP2nQ7!wL4zR8vC3hT6yB1dF5sA0
# MAX_TRANSCRIPTIONS_PER_HOUR=3
# MAX_SEARCHES_PER_MINUTE=10
# MAX_CHATS_PER_MINUTE=5
